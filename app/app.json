{
  "expo": {
    "name": "SplitItUp",
    "slug": "splitsahi",
    "version": "1.0.1",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "scheme": "splititup",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#020617"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.splititup.app",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "upi",
          "tez",
          "phonepe",
          "paytm",
          "bhim"
        ],
        "NSFaceIDUsageDescription": "Allow SplitItUp to use Face ID for secure login."
      },
      "buildNumber": "2"
    },
    "icon": "./assets/images/icon.png",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#020617"
      },
      "package": "com.piyushparadkar.splititup",
      "versionCode": 2,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "upi",
              "host": "pay"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      "expo-asset",
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f74e5159-7634-48f2-957e-67e65350af76"
      }
    }
  }
}